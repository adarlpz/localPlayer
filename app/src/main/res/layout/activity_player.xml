<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".player"
    android:orientation="vertical"
    android:background="#001936"
    android:padding="25dp">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/trackCover"
            android:layout_width="300dp"
            android:layout_height="300dp">
        </ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/lato_bold"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/trackArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/lato_bold"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/trackAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/lato_regular"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trackRandomButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/random_icon"></ImageView>

        <View
            android:layout_width="25dp"
            android:layout_height="match_parent"></View>
        <ImageView
            android:id="@+id/trackBackButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/previous_iocn"></ImageView>

        <View
            android:layout_width="25dp"
            android:layout_height="match_parent"></View>

        <ImageView
            android:id="@+id/trackPlayPauseButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/pause_icon"></ImageView>

        <View
            android:layout_width="25dp"
            android:layout_height="match_parent"></View>

        <ImageView
            android:id="@+id/trackNextButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/next_icon"></ImageView>

        <View
            android:layout_width="25dp"
            android:layout_height="match_parent"></View>

        <ImageView
            android:id="@+id/trackCycleButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cycle_icon"></ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000C21"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_analyzer"></ImageView>
    </LinearLayout>
</LinearLayout>